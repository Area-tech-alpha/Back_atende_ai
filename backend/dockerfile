# Etapa 1: Construção da imagem do backend
FROM node:20-slim

# Instala dependências de sistema para o node-gyp (necessárias para algumas libs como a do WhatsApp)
RUN apt-get update && apt-get install -y python3 make g++ curl && rm -rf /var/lib/apt/lists/*

# Define o diretório de trabalho dentro do container
WORKDIR /app

# Copia e instala as dependências do backend
COPY ./backend/package.json ./
COPY ./backend/package-lock.json ./
RUN npm install --legacy-peer-deps

# Copia o restante do código da aplicação backend
COPY ./backend/ .

# Variáveis de ambiente padrão
ENV NODE_ENV=production
ENV PORT=3000

# Expõe a porta que o servidor irá usar
EXPOSE 3000

# Healthcheck para o Railway saber se a aplicação está de pé
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Comando para iniciar o servidor usando o script 'start:all'
CMD ["npm", "run", "start:all"]