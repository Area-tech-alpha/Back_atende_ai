{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist/node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "server.js",
    "processScheduledMessages.js",
    "api/**/*.js",
    "src/lib/supabase.ts"
  ],
  "exclude": ["node_modules", "dist", "src"]
}
