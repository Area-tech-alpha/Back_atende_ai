# .env.example (backend)

# Para operações diretas no banco postgres
DATABASE_URL=postgres://sua_url_do_banco

# Porta padrão da API
PORT=3000

# Token para checagem pela vercel para workers
CRON_SECRET=qualquer_valor_seguro

# Supabase (backend usa Service Role para ler/escrever)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# URL pública do frontend
FRONTEND_URL=http://localhost:4000

# Variável para diferenciação do ambiente, development, testing, staging ou production
NODE_ENV=seu_ambiente